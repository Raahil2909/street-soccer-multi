    <!-- Settings Modal -->
    <div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="settingsModalLabel">Settings</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" >
            <div class="container-fluid">
                <div class="row">
                    <div class="col col-3"><label for="kick-vol-slider">Kick Sound</label></div>
                    <div class="col col-3"><input type="range" min="0" max="1" value="0.5" step="0.1" class="slider" id="kick-vol-slider"></div>
                </div>
                <div class="row">
                    <div class="col col-3"><label for="goal-vol-slider">Goal Sound</label></div>
                    <div class="col col-3"><input type="range" min="0" max="0.3" value="0.10" step="0.01" class="slider" id="goal-vol-slider"></div>
                </div>
                <div class="row">
                    <div class="col col-3"><label for="bg-vol-slider">BGM</label></div>
                    <div class="col col-3"><input type="range" min="0" max="100" value="30" class="slider" id="bg-vol-slider"></div>
                </div>
                <div class="row">
                    <div class="col col-3"><label for="joystick-radius-slider">Joystick Radius</label></div>
                    <div class="col col-3"><input type="range" min="0" max="100" value="30" class="slider" id="joystick-radius-slider"></div>
                </div>
                <div class="row">
                    <div class="col col-3"><label for="kick-button-slider">Kick btn Radius</label></div>
                    <div class="col col-3"><input type="range" min="0" max="100" value="30" class="slider" id="kick-button-slider"></div>
                </div>
                <div class="row">
                    <div class="col col-3"><label for="tackle-button-slider">Tackle btn Size</label></div>
                    <div class="col col-3"><input type="range" min="0" max="100" value="30" class="slider" id="tackle-button-slider"></div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
